@page
@model BulkyWebRezor.Pages.Categorise.EditModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h1 class="text-primary">Edit Category</h1>
        </div>
        @* <div asp asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3">
            <label asp-for="Category.Name" class="p-0">Category Name </label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" class="p-0"> </label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            </div>
            <div class="col-md-6">
                <a asp-page="/Category/Index" class="btn btn-secondary border" style="width:250px">Back To List</a>
            </div>
        </div>


    </div>

</form>

